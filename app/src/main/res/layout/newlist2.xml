<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip" 
    android:layout_marginBottom="3dip"
    android:background="#fff">

	

    <TextView
     android:id="@+id/content_id"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="" 
     android:visibility="gone"/>
     <TextView
     android:id="@+id/content_nm"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="" 
     android:visibility="gone"/>
     
     <RelativeLayout 
    android:id="@+id/iglay"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
           <ImageView
        android:id="@+id/listimg"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_gravity="center"
		android:src="@drawable/profile" />
         </RelativeLayout>

    <TextView
        android:id="@+id/u_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#040404"
        android:layout_marginLeft="7sp"
        android:layout_marginBottom="3sp"
        android:typeface="sans" 
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/iglay"
        android:text="Sony Xperia Z1"/>
    
    

    <TextView
        android:id="@+id/u_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/u_title"
        android:layout_toRightOf="@+id/iglay"
        android:layout_marginLeft="7sp"
        android:textColor="#343434"
        android:textSize="14sp"
        android:layout_marginTop="1dip"
        android:text="Price: " />
    
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ccc"
        android:typeface="sans" 
        android:textSize="12sp"
        android:layout_marginLeft="7sp"
        android:layout_below="@+id/u_type"
        android:layout_toRightOf="@+id/iglay"
        android:text="Long press to Delete"/>
    
      <ImageView
        android:id="@+id/imgv"
        android:layout_width="20sp"
        android:layout_height="20sp"
       android:layout_alignParentRight="true"
       android:layout_centerInParent="true"
		android:src="@drawable/arrow" />
    
    

</RelativeLayout>