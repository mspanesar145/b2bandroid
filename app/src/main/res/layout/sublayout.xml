<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10sp" >
     <ScrollView
        android:id="@+id/sv1_enq_post_size_details1"
       android:layout_width="fill_parent" 
       android:layout_height="fill_parent"
       android:scrollbars="horizontal" >
<LinearLayout 
    android:id="@+id/main_table_details_ll1" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    
                       <TextView
                        android:id="@+id/txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:text="Name"
                        android:textSize="16sp" />
    
                <EditText
			     android:id="@+id/sub_1"
			     android:layout_width="match_parent"
			     android:layout_height="wrap_content"
			     android:layout_margin="5sp"
			     android:lines="1"
                 android:singleLine="true" 
			      android:background="@drawable/edittext_top_bg"
			     android:padding="10dp">
			        <requestFocus />
            </EditText>
     
                        <TextView
                        android:id="@+id/txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5sp"
                        android:text="Username"
                        android:textSize="16sp" />
     
                 <EditText
			     android:id="@+id/sub_2"
			     android:layout_width="match_parent"
			     android:layout_height="wrap_content"
			     android:layout_margin="5sp"
			      android:lines="1"
			      android:inputType="textFilter"
                 android:singleLine="true" 
			     android:background="@drawable/edittext_top_bg"
			     android:padding="10dp"
			      />
     
            <TextView
                        android:id="@+id/txt3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:layout_margin="5sp"
                        android:text="Password"
                        android:textSize="16sp" />
    
           <EditText
            android:id="@+id/sub_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_top_bg"
            android:lines="1"
            android:padding="15dp"
            android:layout_margin="5sp"
            android:singleLine="true" 
            android:textColorHint="#aaa"
            android:textColor="#000"/>
          
            
                      <TextView
                        android:id="@+id/txt4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:layout_margin="5sp"
                        android:text="Mobile"
                        android:textSize="16sp" />
            
            <EditText
            android:id="@+id/sub_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_top_bg"
            android:lines="1"
            android:layout_margin="5sp"
            android:padding="15dp"
            android:inputType="number"
            android:singleLine="true"
            android:textColorHint="#aaa"
            android:textColor="#000"/>
            
               <TextView
                        android:id="@+id/txt5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:layout_margin="5sp"
                        android:text="Department"
                        android:textSize="16sp" />
            
            <EditText
            android:id="@+id/sub_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_top_bg"
            android:lines="1"
            android:layout_margin="5sp"
            android:padding="15dp"
            android:singleLine="true"
            android:textColorHint="#aaa"
            android:textColor="#000"/>
            
              <TextView
                        android:id="@+id/txt6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:layout_margin="5sp"
                        android:text="Designation"
                        android:textSize="16sp" />
            
            <EditText
            android:id="@+id/sub_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_top_bg"
            android:lines="1"
            android:layout_margin="5sp"
            android:padding="15dp"
            android:singleLine="true"
            android:textColorHint="#aaa"
            android:textColor="#000"/>
            
              <TextView
                        android:id="@+id/txt7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:layout_margin="5sp"
                        android:text="Permission"
                        android:textSize="16sp" />
                  <RelativeLayout 
    android:id="@+id/chks"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
            
            <CheckBox
                android:id="@+id/chk1"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:text="Orders" />
             
            <CheckBox
                android:id="@+id/chk2"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:text="Quotations"
                android:layout_toRightOf="@+id/chk1" />
             
            <CheckBox
                android:id="@+id/chk3"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:text="Messages"
                android:layout_below="@+id/chk1" />
            
             <CheckBox
                android:id="@+id/chk4"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:text="Payments"
                android:layout_toRightOf="@+id/chk3"
                android:layout_below="@+id/chk2" />
             
             <CheckBox
                android:id="@+id/chk5"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:text="Access All Order"
                android:layout_below="@+id/chk3" />
             
              <CheckBox
                android:id="@+id/chk6"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:text="Collection Agent"
                android:layout_toRightOf="@+id/chk5"
                android:layout_below="@+id/chk4" />
             
             <TextView
                        android:id="@+id/txt8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:layout_margin="5sp"
                        android:textSize="16sp" />
             
             </RelativeLayout>
         
             <Button
            android:id="@+id/btnsp"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:background="@drawable/btn"
            android:layout_margin="4dp"
            android:onClick="StoreSub"
            android:padding="10dp"
            android:textColor="#fff"
            android:text="Create" />
              
</LinearLayout>
</ScrollView>

</LinearLayout>
